<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hardcore To Do List</title>
    <link rel="stylesheet" href="style.css">
    <script src="script.js" defer></script>
</head>

<body>
    <header></header>
    <main>
        <section>
            <% if (task == null) { %> 
            <form action="/create" method="post">
                <input type="text" name="task" id="task" placeholder="Insira uma tarefa">
                <button type="submit" id="addButton">Adicionar</button>
            </form>
            <% } else { %> 
            <form action="/updateOne/<%= task._id %>" method="post">
                <input type="text" name="task" id="task" value="<%= task.task %>">
                <button type="submit" id="addButton">Atualizar</button>
            </form>
            <% } %> 
        </section>
        <section class="tasks" id="tasks">
            <ul>
                <% tasksList.forEach((task)=> { %>
                    <li>
                        <%= task.task %> | <%= task.date.toLocaleDateString('pt-br') %>
                                <a href="/getById/<%= task._id %>">Editar</a>
                                <a href="">Apagar</a>
                    </li>
                    <% }) %>
            </ul>
        </section>
    </main>
    <footer></footer>
</body>

</html>